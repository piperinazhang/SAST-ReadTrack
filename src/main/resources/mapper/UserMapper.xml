<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sast.sastreadtrack.mapper.UserMapper">
    <!--xml文件供参考，可调整，可使用注解方法-->

    <!-- 新增用户 -->
    <insert id="insert" parameterType="com.sast.sastreadtrack.entity.User">
        INSERT INTO t_user (username, password, created_at)
        VALUES (#{username}, #{password}, #{createdAt})
    </insert>

    <!-- 根据id查询用户 -->
    <select id="selectById" resultType="com.sast.sastreadtrack.entity.User">
        SELECT id, username, password
        FROM t_user
        WHERE id = #{id}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultType="com.sast.sastreadtrack.entity.User">
        SELECT *
        FROM t_user
        WHERE username = #{username}
    </select>
</mapper>
